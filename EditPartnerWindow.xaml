<Window x:Class="WpfDemoZiaytdinova.EditPartnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoZiaytdinova"
        mc:Ignorable="d"
        Icon="/Images/Мастер пол.ico"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Title="Редактирование партнера" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Image Source="/Images/Мастер пол.png" Height="50" Margin="10"/>
            <TextBlock Text="Данные о партнёре" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="Наименование"/>
        <TextBox Name="NameBox"/>
        <TextBlock Text="Директор"/>
        <TextBox Name="DirectorBox"/>
        <TextBlock Text="Почта"/>
        <TextBox Name="EmailBox"/>
        <TextBlock Text="Номер телефона"/>
        <TextBox Name="PhoneNumberBox"/>
        <TextBlock Text="Адрес"/>
        <TextBox Name="AddressBox"/>
        <TextBlock Text="ИНН"/>
        <TextBox Name="INNBox"/>
        <TextBlock Text="Рейтинг"/>
        <TextBox Name="RaitingBox"/>
        <TextBlock Text="Тип партнёра"/>
        <ComboBox Name="TypeComboBox" DisplayMemberPath="TypeName"/>
        <StackPanel Orientation="Horizontal" Margin="20">
            <Button x:Name="SaveButton" Content="Сохранить" Margin="5" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Отмена" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
